@startuml RestMan_UseCaseDiagram
!theme plain
title Hình 3.1: Biểu đồ use case tổng quan - Hệ thống RestMan

left to right direction

actor "Customer\n(Khách hàng)" as Customer
actor "Sales Staff\n(Nhân viên bán hàng)" as SalesStaff
actor "Warehouse Staff\n(Nhân viên kho)" as WarehouseStaff
actor "Manager\n(Nhân viên quản lý)" as Manager

actor "Member\n(Thành viên)" as Member
actor "Staff\n(Nhân viên)" as Staff

' Inheritance relationships
Member <|-- Customer
Member <|-- Staff
Staff <|-- SalesStaff
Staff <|-- WarehouseStaff
Staff <|-- Manager

' System boundary
rectangle "Hệ thống quản lý nhà hàng RestMan" {
    ' Common use cases
    usecase "Login\n(Đăng nhập)" as Login
    usecase "Logout\n(Đăng xuất)" as Logout
    usecase "Change Password\n(Đổi mật khẩu)" as ChangePassword
    
    ' Customer use cases
    usecase "Search Dish Information\n(Tìm kiếm thông tin món ăn)" as SearchDish
    usecase "Reserve Table\n(Đặt bàn)" as ReserveTable
    usecase "Order Online\n(Đặt hàng online)" as OrderOnline
    
    ' Sales Staff use cases
    usecase "Receive Customer\n(Tiếp nhận khách hàng)" as ReceiveCustomer
    usecase "Take Order\n(Nhận đơn hàng)" as TakeOrder
    usecase "Process Payment\n(Xử lý thanh toán)" as ProcessPayment
    usecase "Create Membership Card\n(Tạo thẻ thành viên)" as CreateMembership
    usecase "Confirm Reservation\n(Xác nhận đặt bàn)" as ConfirmReservation
    usecase "Confirm Online Order\n(Xác nhận đơn hàng online)" as ConfirmOnlineOrder
    
    ' Warehouse Staff use cases
    usecase "Input Ingredients\n(Nhập nguyên liệu)" as InputIngredients
    usecase "Manage Supplier Information\n(Quản lý thông tin nhà cung cấp)" as ManageSupplier
    
    ' Manager use cases
    usecase "View Statistics\n(Xem thống kê)" as ViewStatistics
    usecase "Manage Dish Information\n(Quản lý thông tin món ăn)" as ManageDish
    usecase "Create Combo Menu\n(Tạo combo menu)" as CreateCombo
    usecase "View Dish Statistics\n(Xem thống kê món ăn)" as ViewDishStats
    usecase "View Customer Statistics\n(Xem thống kê khách hàng)" as ViewCustomerStats
    usecase "View Supplier Statistics\n(Xem thống kê nhà cung cấp)" as ViewSupplierStats
}

' Associations
Member --> Login
Member --> Logout
Member --> ChangePassword

Customer --> SearchDish
Customer --> ReserveTable
Customer --> OrderOnline

SalesStaff --> ReceiveCustomer
SalesStaff --> TakeOrder
SalesStaff --> ProcessPayment
SalesStaff --> CreateMembership
SalesStaff --> ConfirmReservation
SalesStaff --> ConfirmOnlineOrder

WarehouseStaff --> InputIngredients
WarehouseStaff --> ManageSupplier

Manager --> ViewStatistics
Manager --> ManageDish
Manager --> CreateCombo
Manager --> ViewDishStats
Manager --> ViewCustomerStats
Manager --> ViewSupplierStats

' Include relationships
SearchDish ..> Login : <<include>>
ReserveTable ..> Login : <<include>>
OrderOnline ..> Login : <<include>>
TakeOrder ..> ReceiveCustomer : <<include>>
ProcessPayment ..> TakeOrder : <<include>>
InputIngredients ..> ManageSupplier : <<include>>

@enduml
